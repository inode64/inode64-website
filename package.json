      "*.log",
      "public/**",
      ".git",
      ".vscode/extensions.json",
      "node_modules/**"
    ],
    "language": "en, es",
    "languageSettings": [
      {
        "dictionaries": [
          "main"
        ],
        "languageId": "*"
      }
    ]
  }
