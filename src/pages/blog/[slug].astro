---
import { Image } from "astro:assets";
import type { GetStaticPaths } from "astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Formatter } from "@/utils/formatter";
import { siteConfig } from "@/config/site-config";

import { postImages } from "@/assets/images/blog/post";
import felixAvatar from "../../assets/images/team/felix.webp";

export const getStaticPaths = (async () => {
  const blogPosts = await getCollection("blog");
  const visiblePosts = blogPosts.filter((post) => post.data.isDraft !== true);

  return visiblePosts.map((post) => ({
    params: { slug: post.slug },
    props: { post: post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const frontmatter = post.data;
const { Content } = await post.render();
const ogImage = postImages[frontmatter.image];
const publishedTime = new Date(frontmatter.date).toISOString();
const pageUrl = Astro.url?.href ?? "";
const siteUrl = Astro.site?.href?.replace(/\/$/, "") ?? "";
const ogImageSrc = ogImage.src;
const absoluteOgImage = ogImageSrc && siteUrl ? new URL(ogImageSrc, siteUrl).href : ogImageSrc;
const breadcrumbSchema = {
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Inicio",
      "item": siteUrl
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": `${siteUrl}/blog/1`
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": frontmatter.title,
      "item": pageUrl
    }
  ]
};
const articleSchema = {
  "@type": "BlogPosting",
  "@id": pageUrl ? `${pageUrl}#article` : undefined,
  headline: frontmatter.title,
  description: frontmatter.description,
  image: absoluteOgImage ? [absoluteOgImage] : undefined,
  author: {
    "@type": "Person",
    name: frontmatter.author,
  },
  publisher: siteUrl ? { "@id": `${siteUrl}#organization` } : undefined,
  datePublished: publishedTime,
  mainEntityOfPage: pageUrl ? { "@type": "WebPage", "@id": pageUrl } : undefined,
  inLanguage: siteConfig.locale,
};
---

<Layout
  title={`${frontmatter.title} | Blog ${siteConfig.title}`}
  description={frontmatter.description}
  image={ogImage}
  ogType="article"
  author={frontmatter.author}
  publishedTime={publishedTime}
  articleTags={frontmatter.tags}
  structuredData={[articleSchema, breadcrumbSchema]}
>
  <div class="lg:pt-14 sm:pt-14 pt-5 px-6 lg:px-8">
    <div class="mx-auto mt-10 pt-10 sm:mt-6 sm:pt-6 lg:mx-auto lg:max-w-4xl">
      <h1 class="text-2xl mb-0">{frontmatter.title}</h1>
      <div class="relative mt-5 flex items-center gap-x-4">
        <Image
          src={felixAvatar}
          format="webp"
          class="size-12 rounded-full shadow"
          loading="lazy"
          alt={frontmatter.author}
        />
        <div class="text-sm/6">
          <p class="text-gray-500">{Formatter.formatDate(frontmatter.date)}</p>
          <p class="font-semibold text-gray-900">{frontmatter.author}</p>
        </div>
      </div>
      <div class="flex justify-center my-4">
        <Image
          src={postImages[frontmatter.image]}
          format="webp"
          class="w-full max-w-xl"
          loading="lazy"
          alt={frontmatter.title}
          transition:name={post.slug}
        />
      </div>

      <Content />

      <div class="mt-8">
        <div class="flex flex-wrap gap-2">
          {
            frontmatter.tags.map((tag) => (
              <span class="inline-block bg-gray-200 text-gray-700 text-xs px-3 py-1 rounded-full">{tag}</span>
            ))
          }
        </div>
      </div>

      <div class="mt-6">
        <a
          href="/blog"
          class="inline-block rounded-md py-3 text-sm font-semibold text-red-800 hover:text-red-700 transition"
        >
          ‚Üê Volver al blog
        </a>
      </div>
    </div>
  </div>
</Layout>
